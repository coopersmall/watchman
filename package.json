{
  "name": "watchman",
  "version": "1.0.0",
  "license": "ISC",
  "scripts": {
    "build": "pnpm -r --stream build",
    "build-core": "pnpm --filter core --stream build",
    "clean": "pnpm -r clean",
    "commit": "git-cz",
    "commit-all": "git add . && pnpm commit",
    "dev": "pnpm run dev -r",
    "format": "prettier **/*.{ts,js,json,yaml,md} -l",
    "format-fix": "prettier **/*.{ts,js,json,yaml,md} --write",
    "lint": "eslint --ext .js,.ts . --max-warnings=0",
    "lint-fix": "eslint --ext .js,.ts . --fix",
    "rebuild": "pnpm -r rebuild",
    "setup": "pnpm install",
    "test": "pnpm -r test --stream",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.3.6",
    "@types/jest": "^29.1.2",
    "@types/node": "^18.8.3",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "chokidar": "^3.5.3",
    "commitizen": "^4.2.5",
    "concurrently": "^7.4.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.25.0",
    "eslint-plugin-jest": "^27.1.1",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.0",
    "jest": "^29.1.2",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1",
    "ts-jest": "^29.0.3",
    "typescript": "^4.8.4"
  },
  "commitlint": {
    "extends": [
      "./@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && npx cz --hook || true",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "pnpm clean && lint-staged"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "globals": {
      "ts-jest": {
        "isolatedModules": true
      }
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix --cache",
      "prettier --write"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "none",
    "printWidth": 120
  }
}
